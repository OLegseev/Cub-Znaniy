        <Button FontFamily="Arial"  Content="Рассылка" BorderBrush="#FF306771" Background="#0cf"  HorizontalAlignment="Left" Margin="474,302,0,0" VerticalAlignment="Top" Width="116" Click="Button_Click_1" Cursor="Hand"/>








    </Grid>
