            <TextBox x:Name="lab" FontFamily="Arial"  TextWrapping="Wrap" Width="443"  TextChanged="TextBox_TextChanged_1"/>
        </Label>
        <ComboBox  FontFamily="Arial"  x:Name="cb" materialDesign:HintAssist.Hint="Выбрать ранее" Margin="474,25,10,0" VerticalAlignment="Top" SelectionChanged="cb_SelectionChanged"/>
