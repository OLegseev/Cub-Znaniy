            <TextBox x:Name="lab" FontFamily="Arial"  TextWrapping="Wrap" Width="443"  />
        </Label>
        <Button FontFamily="Arial"  Content="Установить" BorderBrush="#FF306771" Background="#0cf"  HorizontalAlignment="Left" Margin="510,92,0,0" VerticalAlignment="Top" Width="116" Cursor="Hand" Click="Button_Click"/>
        <TextBlock x:Name="tb" HorizontalAlignment="Left" Margin="10,10,0,0" FontFamily="Arial" FontSize="15" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>


    </Grid>
</Page>
